#include <stdio.h>

int main()
{
    float num1, num2, resultado;
    
    
 
    printf ("insira o primeiro valor:\n");
    scanf ("%f", &num1);
    printf ("insira o segundo valor:\n");
    scanf ("%f", &num2);
    
    resultado=num1+num2;
    
    printf("A soma de %.2f e %.2f Ã© %.2f", num1, num2, resultado);

    return 0;
}
